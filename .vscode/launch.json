{
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/extension.js",
                "${workspaceFolder}/extension.js.map",
                "${workspaceFolder}/assets/**/*.php"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
